<MudDialog ContentClass="py-2">
    <DialogContent>
        <MudText>لطفا منبلغ خود را به صورت ریالی وارد نمایید</MudText>
        <MudTextField T="int" @bind-Value="_Amount" Placeholder="50000 ریال" Class="mud-ltr" FullWidth />
    </DialogContent>
    <DialogActions>
        <BaseButton OnClick="()=>_MudDialog.Close()">انصراف</BaseButton>
        <BaseButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Pay">پرداخت</BaseButton>
    </DialogActions>
</MudDialog>