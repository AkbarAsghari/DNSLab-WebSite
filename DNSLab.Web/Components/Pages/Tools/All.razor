@attribute [Route(AllRoutes.AllTools)]

<MudCard Elevation="0" Outlined>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h5">ابزار ها</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudGrid Spacing="5">
            <MudItem xs="12" md="6">
                <MudLink Underline="Underline.None" Href="@AllRoutes.Ping">
                    <MudPaper Class="pa-5">
                        <MudText Typo="Typo.h6">Ping</MudText>
                        <MudText>بررسی باز بودن پینگ</MudText>
                    </MudPaper>
                </MudLink>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudLink Underline="Underline.None" Href="@AllRoutes.PortChecker">
                    <MudPaper Class="pa-5">
                        <MudText Typo="Typo.h6">Port Checker</MudText>
                        <MudText>بررسی باز بودن پورت</MudText>
                    </MudPaper>
                </MudLink>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudLink Underline="Underline.None" Href="@AllRoutes.DNSLookup">
                    <MudPaper Class="pa-5">
                        <MudText Typo="Typo.h6">DNS Lookup</MudText>
                        <MudText>بررسی رکورد های DNS</MudText>
                    </MudPaper>
                </MudLink>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudLink Underline="Underline.None" Href="@AllRoutes.ReverseLookup">
                    <MudPaper Class="pa-5">
                        <MudText Typo="Typo.h6">Reverse Lookup</MudText>
                        <MudText>بدست آوردن DNS Server از روی IP</MudText>
                    </MudPaper>
                </MudLink>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>