@attribute [Route(AllRoutes.ResetPassword + "/{Token}")]

<MudStack AlignItems="AlignItems.Center">
    <MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="mt-6">
        <MudCard Outlined Class="pa-5">
            <MudText Typo="Typo.h3" Class="my-3">بازنشانی رمز عبور جدید</MudText>
            @if (_IsSuccess)
            {
                <MudAlert ContentAlignment="HorizontalAlignment.Start" Dense Severity="Severity.Success">
                    <MudText>رمز عبور با موفقیت تغییر یافت.</MudText>
                </MudAlert>
                <BaseButton Href="@AllRoutes.Login" Class="mt-2" Color="Color.Primary">بازکشت به صفحه ورود</BaseButton>
            }
            else
            {
                <MudText>رمز عبور جدید خود را وارد نمایید.</MudText>
                <EditForm Model="_ResetPasswordDTO" Context="ctx">
                    <DataAnnotationsValidator />
                    <MudTextField T="string" InputType="InputType.Password" Placeholder="رمز عبور جدید" Variant="Variant.Outlined" Class="my-2 mud-ltr" For="()=>_ResetPasswordDTO.Password" @bind-Value="_ResetPasswordDTO.Password"></MudTextField>
                    <BaseButton Color="Color.Primary" ButtonType="ButtonType.Submit" EditContext="ctx" OnClick="SavePassword" Variant="Variant.Filled" FullWidth>ذخیره رمز عبور جدید</BaseButton>
                </EditForm>
            }
        </MudCard>
    </MudContainer>
</MudStack>
