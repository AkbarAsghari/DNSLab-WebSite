<MudDrawer @bind-Open="_drawerOpen" Overlay="false" Class="baackdrop-bluered" ClipMode="DrawerClipMode.Always">
    <MudNavMenu>
        <MudNavLink Href="@AllRoutes.Home" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">خانه</MudNavLink>
        <AuthorizeView Context="_AuthCTX">
            <Authorized>
                @if (_AuthCTX.User.IsInRole(AuthorizeRoles.Admin))
                {
                    <MudNavGroup Title="مدیریت" Icon="@Icons.Material.Filled.AdminPanelSettings">
                        <MudNavLink Href="@AllRoutes.AllTickets">تیکت ها</MudNavLink>
                        <MudNavLink Href="@AllRoutes.AllPages">مطالب سایت</MudNavLink>
                        <MudNavLink Href="@AllRoutes.AllDDNSHostNames">همه DDNS ها</MudNavLink>
                    </MudNavGroup>
                }
                <MudNavLink Href="@AllRoutes.Dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">داشبورد</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.Cloud" Href="@AllRoutes.AllZones">دامنه‌ ها</MudNavLink>
                <MudNavGroup Title="Dynamic DNS" Icon="@Icons.Material.Filled.CloudSync">
                    <MudNavLink Href="@AllRoutes.DDNSHostNames">هاست‌نیم ها</MudNavLink>
                    <MudNavLink Href="@AllRoutes.UpdateTokens">کلید ها</MudNavLink>
                    <MudNavLink Href="@AllRoutes.RouterSettings">تنظیمات مودم (روتر)</MudNavLink>
                    <MudNavLink Href="@AllRoutes.MikroTikSettings">تنظیمات MikroTik</MudNavLink>
                </MudNavGroup>
                <MudNavGroup Title="گیف پول" Icon="@Icons.Material.Filled.Wallet">
                    <MudNavLink Href="@AllRoutes.MyWallet">موجودی</MudNavLink>
                    <MudNavLink Href="@AllRoutes.WalletTransactions">تراکنش ها</MudNavLink>
                    <MudNavLink Href="@AllRoutes.PaymentTransactions">پرداحت ها</MudNavLink>
                </MudNavGroup>
                <MudNavLink Href="@AllRoutes.MyAccount" Icon="@Icons.Material.Filled.AccountBox">حساب کاربری</MudNavLink>
            </Authorized>
        </AuthorizeView>
        <MudNavLink Icon="@Icons.Material.Rounded.Web" Href="@AllRoutes.AllBlogs">بلاگ</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Rounded.Construction" Href="@AllRoutes.AllTools">ابزار ها</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Rounded.Code" Href="@AllRoutes.ItIsUnderDevelopment">API</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Rounded.SupportAgent" Href="@AllRoutes.MyTickets">پشتیبانی</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Rounded.Money" Href="@AllRoutes.ItIsUnderDevelopment">تعرفه ها</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Rounded.Computer" Href="@AllRoutes.About">درباره ما</MudNavLink>
        <AuthorizeView>
            <Authorized>
                <MudNavLink Href="@AllRoutes.Logout" Icon="@Icons.Material.Filled.Logout" IconColor="Color.Error">خروج</MudNavLink>
            </Authorized>
        </AuthorizeView>
    </MudNavMenu>
</MudDrawer>

@code {
    private bool _drawerOpen = true;
    public void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
        StateHasChanged();
    }
}
