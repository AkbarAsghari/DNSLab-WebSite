@inject IStaticsRepository _StaticsRepository
@inject NavigationManager _NavigationManager

<MudPaper Class="d-flex align-center flex-grow-1" Elevation="0">
    @if (!String.IsNullOrWhiteSpace(FullName))
    {
        <MudText>نویسنده :</MudText>
        <UserProfileImage Size=25 UserId="@UserId.ToString()" />
        <MudText>@FullName</MudText>
    }
    @if (PublishDate != null)
    {
        <MudText> - انتشار : </MudText>
        <MudText>@PublishDate.Value.CalcRelativeTime().EnglishToPersianNumbers()</MudText>
        @if (UpdateDate != null)
        {
            <MudText> - آخرین ویرایش : </MudText>
            <MudText>@UpdateDate.Value.CalcRelativeTime().EnglishToPersianNumbers()</MudText>
        }
    }
    - تعداد بازدید :
    @if (visitCount > -1)
    {
        <MudText>@(visitCount.ToString().EnglishToPersianNumbers() + " بار")</MudText>
    }
    else
    {
        <MudProgressCircular Size="Size.Small" Color="Color.Primary" />
    }
</MudPaper>