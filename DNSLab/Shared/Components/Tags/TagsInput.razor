@using System;
@using System.Collections.Generic;
@using System.Linq;
@using System.Text.RegularExpressions;

<MudTextField T="string" Label="تگ ها"
              Placeholder="با ( ویرگول ) جدا کنید"
              Immediate="true" @bind-Value="@Value" 
              Clearable="true" />

@if (IsContainSpecialCharacter)
{
    <MudAlert Severity="Severity.Error" ContentAlignment="HorizontalAlignment.Right">
        <MudText>امکان درج کاراکتر های خاص وجود ندارد</MudText>
    </MudAlert>
}
@if (Tags != null && Tags.Any())
{
    @foreach (var tag in Tags)
    {
        <MudFab StartIcon="@Icons.Material.Filled.Close" Label="@tag" OnClick="() => DeleteTag(tag)" />
    }
}
