@if (IsBussy)
{
    <MudProgressCircular Color="Color" Indeterminate="true">
        <MudText>در حال پردازش</MudText>
    </MudProgressCircular>
}
else
{
    <MudButton Class="align-items-center" Color=@Color ButtonType="(EditContext == null ? ButtonType.Button : ButtonType.Submit)"
           StartIcon="@Icon"
           Variant="@(IsOutLine  ? Variant.Outlined : Variant.Filled)"
           OnClick="ButtonClickedEvent">
        @Caption
    </MudButton>
}