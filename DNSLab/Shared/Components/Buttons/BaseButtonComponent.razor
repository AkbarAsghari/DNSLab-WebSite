@if (IsBussy)
{
    <BitActionButton Class="dir-ltr mt-1" IsEnabled=false>
        <BitSpinner LabelPosition="BitSpinnerLabelPosition.Right" Size="BitSpinnerSize.Large" Label="در حال پردازش" />
    </BitActionButton>
}
else
{
    <BitButton Class="mt-1" ButtonType="(EditContext == null ? BitButtonType.Button : BitButtonType.Submit)"
           OnClick="ButtonClickedEvent">

        <text>@Caption</text>
        @if (Icon is not null)
        {
            <text>@(" ")</text>
            <BitIcon IconName="@Icon.Value"/>
        }
    </BitButton>
}