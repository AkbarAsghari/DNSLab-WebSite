<MudButton Class="mt-2" Disabled="@IsBussy" OnClick="ButtonClickedEvent"
           Variant="@(IsOutLine  ? Variant.Outlined : Variant.Filled)"
           StartIcon="@Icon"
           ButtonType="(EditContext == null ? ButtonType.Button : ButtonType.Submit)"
           Color=@Color>
    @if (IsBussy)
    {
        <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
        <MudText Class="ms-2">@IsBussyCaption</MudText>
    }
    else
    {
        <MudText>@Caption</MudText>
    }
</MudButton>