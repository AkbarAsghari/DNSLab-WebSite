@using DNSLab.DTOs.Tips
@using System.Text
@inject ITransactionRepository _TransactionRepository

<MudText Class="mt-7">@_TipsInformation.PrecentTowardsToCurrentMonthGoal.ToString().EnglishToPersianNumbers()% رسیدن به هدف @(_TipsInformation.Goal.ToString("N0").EnglishToPersianNumbers()) تومان در ماه</MudText>
<MudProgressLinear Color="Color.Secondary" Rounded Size="Size.Medium" Value="_TipsInformation.PrecentTowardsToCurrentMonthGoal" Class="mb-7" />
@if (_TipsInformation.CurrentPaidsUsers != null)
{
    <MudText Typo="Typo.h4" Class="my-2">حامی های این ماه</MudText>
    <MudGrid Class="d-flex align-center flex-grow-1">
        <MudItem>
            <MudAvatarGroup Max="10" Spacing="2" MaxColor="Color.Primary">
                @foreach (var item in _TipsInformation.CurrentPaidsUsers)
                {
                    <MudAvatar Style="background-color:white"><UserProfileImage UserId="@item.ToString()" Size="50" /></MudAvatar>
                }
            </MudAvatarGroup>
        </MudItem>
        <MudItem>
            <MudText>@_TipsInformation.CurrentPaidsCount.ToString().EnglishToPersianNumbers() نفر</MudText>
            <MudText>@_TipsInformation.CurrentPaidsAmount.ToString("N0").EnglishToPersianNumbers() تومان</MudText>
        </MudItem>
    </MudGrid>
}


@if (_TipsInformation.PastPaidsUsers != null)
{
    <MudText Typo="Typo.h4" Class="my-2">حامی های ماه قبل</MudText>
    <MudGrid Class="d-flex align-center flex-grow-1">
        <MudItem>
            <MudAvatarGroup Max="10" Spacing="2" MaxColor="Color.Primary">
                @foreach (var item in _TipsInformation.PastPaidsUsers)
                {
                    <MudAvatar Style="background-color:white"><UserProfileImage UserId="@item.ToString()" Size="50" /></MudAvatar>
                }
            </MudAvatarGroup>
        </MudItem>
        <MudItem>
            <MudText>@_TipsInformation.PastPaidsCount.ToString().EnglishToPersianNumbers() نفر</MudText>
            <MudText>@_TipsInformation.PastPaidsAmount.ToString("N0").EnglishToPersianNumbers() تومان</MudText>
        </MudItem>
    </MudGrid>
}