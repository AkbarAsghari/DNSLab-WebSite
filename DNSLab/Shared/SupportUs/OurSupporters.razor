@using DNSLab.DTOs.Tips
@using System.Text
@inject ITransactionRepository _TransactionRepository

@if (result.Count > 0)
{
    <MudContainer MaxWidth="MaxWidth.Small">
        <MudText Typo="Typo.h3">حمایت کنندگان</MudText>
        <MudDataGrid Items="@result">
            <Columns>
                <PropertyColumn Property="x => x.FullName.EnglishToPersianNumbers()" Title="نام و نام خانوادگی" />
                <PropertyColumn Property='x => x.Amount.ToString("N0").EnglishToPersianNumbers()' Title="مبلغ" />
            </Columns>
        </MudDataGrid>
    </MudContainer>
}