@using DNSLab.DTOs.Statics
@inject IStaticsRepository staticRepository

<TimeLine Data="siteCHanges" TimeLineHeader="تاریخچه تغییرات سایت">
    <TimeLineItemRenderFragment>
        <TimeLineItem DateTime="@context.ReleaseDate">
            <Body>
                <p class="small">@context.Title</p>
            </Body>
        </TimeLineItem>
    </TimeLineItemRenderFragment>
</TimeLine>

@code {

    IEnumerable<SiteChangesDTO> siteCHanges;

    protected override async Task OnInitializedAsync()
    {
        siteCHanges = await staticRepository.GetLastChanges();
    }
}
