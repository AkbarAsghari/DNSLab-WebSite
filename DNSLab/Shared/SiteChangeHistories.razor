@inject IPageRepository pageRepository
<MudText Typo="Typo.h3">آخرین تغییرات</MudText>
<MudTimeline TimelinePosition="TimelinePosition.Right" >
    @if (ChangeLogs != null)
        @foreach (var item in ChangeLogs)
        {
            <MudTimelineItem Color="Color.Primary">
                @if (!String.IsNullOrWhiteSpace(item.InformationLink))
                {
                    <MudText>
                        <MudLink Href="@(String.IsNullOrEmpty(item.InformationLink) ? null :
                ((item.InformationLink.ToLower().StartsWith("https") || item.InformationLink.ToLower().StartsWith("http")) ?
                item.InformationLink : $"changelog/{item.InformationLink}"))">@item.Title</MudLink>
                    </MudText>
                }
                else
                {
                    <MudText>@item.Title</MudText>
                }
                <MudText Typo="Typo.body2" Class="mud-text-secondary">@(item.CreateDate.CalcRelativeTime())</MudText>
                </MudTimelineItem>
        }
</MudTimeline>