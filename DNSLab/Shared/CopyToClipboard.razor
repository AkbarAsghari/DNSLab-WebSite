@inject IJSRuntime JSRuntime

<BitToggleButton OnClick="CopyTextToClipboard"
                 Class="ms-2 me-2"
                 IconName=@(isCopied ? BitIconName.CheckMark : BitIconName.Copy)
                 ButtonStyle="BitButtonStyle.Primary">
</BitToggleButton>

@code {
    bool isCopied = false;
    [Parameter] public string Text { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync(identifier: "import", "/js/custom/CopyToClipboard.js");
        }
    }
    private async Task CopyTextToClipboard()
    {
        isCopied = await JSRuntime.InvokeAsync<bool>("clipboardCopy.copyText", Text);
    }
}