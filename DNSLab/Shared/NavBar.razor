@inject IStringLocalizer<Resource> localizer;

<AuthorizeView>
    <NotAuthorized>
        <nav class="navbar fixed-top navbar-expand-sm navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="">DNSLab</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                                <span class="oi oi-home" aria-hidden="true"></span> @localizer["Home"]
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="user/auth">
                                <span class="oi oi-person" aria-hidden="true"></span> @localizer["Login"]
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="user/register">
                                <span class="oi oi-pencil" aria-hidden="true"></span> @localizer["Register"]
                            </NavLink>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </NotAuthorized>
</AuthorizeView>
