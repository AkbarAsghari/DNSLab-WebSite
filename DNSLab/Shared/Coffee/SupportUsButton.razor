@inject ITransactionRepository _TransactionRepository

<BitButton IconName="BitIconName.Heart" ButtonSize="BitButtonSize.Large" Href="Transaction/Tip" Class="text-decoration-none text-white">
    از رایگان ماندن دی‌ان‌اس لب حمایت کنید <strong>(❤️@supporterCount.ToString().EnglishToPersianNumbers())</strong>
</BitButton>

@code {
    int supporterCount;

    protected override async Task OnInitializedAsync()
    {
        supporterCount = (await _TransactionRepository.GetTips()).Count();
    }
}