@page "/{PageType}/{*URL}"
@inject IPageRepository _PageRepository

<MudContainer MaxWidth="MaxWidth.Large">
    @if (publishPageDTO != null)
    {
        <MudText Typo="Typo.h1">@publishPageDTO.Header</MudText>
        <PageSummary FullName="@publishPageDTO.Author.FullName"
                 UserId="@publishPageDTO.Author.ID"
                 PublishDate="@publishPageDTO.PublishDate"
                 UpdateDate="@publishPageDTO.UpdateDate" />
        <MudDivider />
        @((MarkupString)@publishPageDTO.Body)
        <MudDivider />

        <MudText Typo="Typo.h3">کلمات کلیدی</MudText>
        <MudGrid>
            @foreach (var item in keywords)
            {
                <MudItem>
                    <MudLink Href="@("/Tag/"+item)">@item</MudLink>
                </MudItem>
            }
        </MudGrid>
        <MudDivider />

        <PageComments PageId="@publishPageDTO.Id"></PageComments>
        <MudDivider />
        <SupportUsButton />
    }
</MudContainer> 