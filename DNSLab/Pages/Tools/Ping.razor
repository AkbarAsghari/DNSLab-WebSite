@page "/tools/ping"

@attribute [Authorize]

@inject IIPRepository iPRepository
@inject IStringLocalizer<Resource> localizer

<ToolsForm Header="@localizer["PingChecker"]" Model="@hostOrIPAddress" OnValidSubmit="OnValidSubmit" IsProgressing="@isProgressing" Result="@result">
    <Body>
        <BitMessageBar MessageBarType="BitMessageBarType.Warning">
            <BitLabel>توجه داشته باشید که پینگ از طرف سرور DNSLab ارسال میشود و ممکن است آی پی برای سرور مسدود باشد.</BitLabel>
        </BitMessageBar>
        <div class="col-md-6">
            <BitTextField Label="@localizer["HostOrIPAddress"]"
                          Class="dir-ltr"
                          IsEnabled=!isProgressing
                          Placeholder="@IPDTO.IPv4"
                          @bind-Value="@hostOrIPAddress.HostOrIPAddress" />
        </div>
    </Body>
</ToolsForm>