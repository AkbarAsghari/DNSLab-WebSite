@page "/tools/port"

@inject IIPRepository iPRepository
@inject IStringLocalizer<Resource> localizer
@inject NavigationManager Navigation

<ToolsForm Header="@localizer["PortChecker"]" Model="@hostOrIPAddressAndPort" OnValidSubmit="OnValidSubmit"
    IsProgressing="@isProgressing" Results="@result">
        <MudAlert Severity="Severity.Info" ContentAlignment="HorizontalAlignment.Start">
            <MudText>آزمایش می کند که آیا پورت TCP در IP مشخص باز شده است یا خیر</MudText>
        </MudAlert>
        <MudGrid>
            <MudItem lg=6>
                <MudTextField Label="@localizer["HostOrIPAddress"]" Placeholder="@IPDTO.IPv4"
                @bind-Value="@hostOrIPAddressAndPort.HostOrIPAddress" />
            </MudItem>
            <MudItem lg=6>
                <MudTextField Label="@localizer["PortNumber"]" Placeholder="80"
                @bind-Value="@hostOrIPAddressAndPort.Port" />
            </MudItem>
        </MudGrid>
</ToolsForm>