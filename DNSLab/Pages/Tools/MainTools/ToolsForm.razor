@inject IIPRepository iPRepository
@inject IStringLocalizer<Resource> localizer

@typeparam TItem
<EditForm Model="Model" Context="editCtx">
    <MudText Typo="Typo.h3" GutterBottom>@Header</MudText>
    <DataAnnotationsValidator />
    @ChildContent
    <BaseButtonComponent Caption="@localizer["Check"]" Icon=@Icons.Material.Filled.Search OnClick=OnValidSubmit
                         EditContext="editCtx">
    </BaseButtonComponent>
    @if (Results != null && Results.Count > 0)
    {
        <MudList>
            @foreach (var item in Results)
            {
                <MudListItem>
                    <MudText Class="mud-ltr">
                        @((MarkupString)item)
                    </MudText>
                </MudListItem>
            }
        </MudList>
    }
</EditForm>
