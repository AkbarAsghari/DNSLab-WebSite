@inject IIPRepository iPRepository
@inject IStringLocalizer<Resource> localizer

@typeparam TItem
<EditForm Model="Model" Context="editCtx">
<MudCard>
    <MudCardHeader>
                <MudText Typo="Typo.h3">@Header</MudText>
    </MudCardHeader>
<MudCardContent>
            <DataAnnotationsValidator />
            @Body
</MudCardContent>
<MudCardActions>
            <BaseButtonComponent Caption="@localizer["Check"]" Icon=@Icons.Material.Filled.Search OnClick=OnValidSubmit
                                 EditContext="editCtx">
            </BaseButtonComponent>
</MudCardActions>
<MudCardContent>
 @if (Results != null && Results.Count > 0)
    {
        <MudList>
            @foreach (var item in Results)
            {
                <MudListItem>
                    <MudText Class="mud-ltr">
                        @((MarkupString)item)
                    </MudText>
                </MudListItem>
            }
        </MudList>
    }
</MudCardContent>
</MudCard>
</EditForm>
