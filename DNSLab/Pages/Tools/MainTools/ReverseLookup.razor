@page "/tools/reverselookup"

@inject IDNSLookUpRepository _DNSLookUpRepository
@inject IStringLocalizer<Resource> localizer
@inject NavigationManager Navigation

<ToolsForm Header="@localizer["ReverseLookup"]" Model="@iP" OnValidSubmit="OnValidSubmit" IsProgressing="@isProgressing"
           Results="@result">
    <MudAlert Severity="Severity.Info" ContentAlignment="HorizontalAlignment.Start">
        <MudText>نام میزبان را با آدرس IP دریافت می کند</MudText>
    </MudAlert>
    <MudItem md="6">
        <MudTextField Label="@localizer["IPAddress"]" Placeholder="@IPDTO.IPv4" @bind-Value="@iP.IPv4" />
    </MudItem>
</ToolsForm>