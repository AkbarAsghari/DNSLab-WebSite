@page "/tools/ping"

@inject IIPRepository iPRepository
@inject IStringLocalizer<Resource> localizer
@inject NavigationManager Navigation

<ToolsForm Header="@localizer["PingChecker"]" Model="@hostOrIPAddress" OnValidSubmit="OnValidSubmit" IsProgressing="@isProgressing" Results="@result">
    <Body>
        <MudAlert Severity="Severity.Info" ContentAlignment="HorizontalAlignment.Start">
            <MudText>نشان می دهد که چقدر طول می کشد تا بسته ها به میزبان برسند</MudText>
        </MudAlert>
        <MudAlert Severity="Severity.Warning" ContentAlignment="HorizontalAlignment.Start">
            <MudText>توجه داشته باشید که پینگ از طرف سرور DNSLab ارسال میشود و ممکن است آی پی برای سرور مسدود باشد</MudText>
        </MudAlert>
        <MudItem md=6>
            <MudTextField Label="@localizer["HostOrIPAddress"]"
                          ReadOnly=isProgressing
                          Placeholder="@IPDTO.IPv4"
                          @bind-Value="@hostOrIPAddress.HostOrIPAddress" />
        </MudItem>
    </Body>
</ToolsForm>